---
const projects = [
  {
    title: "Architect Nirmal Saini",
    image: "/images/portfolio1.png",
    link:"https://www.architectnirmalsaini.com"
  },
  {
    title: "Car Rental",
    image: "/images/portfolio3.png",
  },
  {
    title: "Manali Tour And Treveler",
    image: "/images/portfolio4.png",
  },
  {
    title: "Narayan School",
    image: "/images/portfolio5.png",
  },
  {
    title:"Resturant POS",
    image:"/images/portfolio2.png",
    link:"https://restoapp.onrender.com/"
  },
  {
    title:"StoreFront POS",
    image:"/images/portfolio6.png",
    link:"https://storefront-so4w.onrender.com/register"
  }
  
];
---

<section class="py-20 bg-gray-50" id="portfolio">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-gray-800">Our Portfolio</h2>
    <p class="text-gray-500 mt-3">A glimpse of our recent work</p>
  </div>

  <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-4 sm:px-0">
    {projects.map(({ title, image, link }) => (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="group relative overflow-hidden rounded-2xl shadow-md bg-white transform transition duration-300 hover:scale-[1.03] hover:shadow-lg"
      >
        <img
          src={image}
          alt={title}
          class="w-full h-72 object-cover transition-transform duration-500 group-hover:scale-110"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
          <h3 class="text-white text-xl font-semibold">{title}</h3>
        </div>
      </a>
    ))}
  </div>

</section>
