---
import { siteInfo } from '../data/siteinfo.ts';
---

<section id="contact" class="relative py-24 bg-gradient-to-br from-gray-50 via-white to-gray-100 overflow-hidden">
  <!-- Decorative blurred shapes -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute top-16 left-20 w-64 h-64 bg-blue-200 opacity-30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-72 h-72 bg-green-200 opacity-30 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-5xl mx-auto px-6 lg:px-8 text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-10 bg-gradient-to-r from-blue-600 to-green-600 bg-clip-text text-transparent">
      Get in Touch
    </h2>
    <p class="text-gray-600 max-w-2xl mx-auto mb-16">
      Let’s connect and bring your ideas to life. Whether it’s a website, app, or custom business solution — we’re just a message away.
    </p>

    <div class="grid md:grid-cols-3 gap-10">
      <!-- Email -->
      <a
        href={`mailto:${siteInfo.email}`}
        class="bg-white/70 backdrop-blur-lg rounded-2xl p-8 shadow-md hover:shadow-xl transition block hover:scale-105"
      >
        <div class="flex flex-col items-center">
          <div class="bg-blue-100 p-4 rounded-full mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m0 0l4-4m-4 4l4 4" />
            </svg>
          </div>
          <h3 class="font-semibold text-lg text-gray-900 mb-2">Email Us</h3>
          <p class="text-blue-600">{siteInfo.email}</p>
        </div>
      </a>

      <!-- Phone -->
      <a
        href={`tel:${siteInfo.phone}`}
        class="bg-white/70 backdrop-blur-lg rounded-2xl p-8 shadow-md hover:shadow-xl transition block hover:scale-105"
      >
        <div class="flex flex-col items-center">
          <div class="bg-green-100 p-4 rounded-full mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.95.68l1.1 3.3a1 1 0 01-.23 1L9.21 9.21a16 16 0 006.58 6.58l1.23-1.23a1 1 0 011-.23l3.3 1.1a1 1 0 01.68.95V19a2 2 0 01-2 2h-1C9.82 21 3 14.18 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-semibold text-lg text-gray-900 mb-2">Call Us</h3>
          <p class="text-green-600">{siteInfo.phone}</p>
        </div>
      </a>

      <!-- Address -->
<a 
  href="https://www.google.com/maps?q=TechNova24,+Kurukshetra,+Haryana" 
  target="_blank"
  rel="noopener noreferrer"
  class="bg-white/70 backdrop-blur-lg rounded-2xl p-8 shadow-md hover:shadow-xl transition flex flex-col items-center hover:scale-105"
>
  <div class="bg-purple-100 p-4 rounded-full mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5 9 6.343 9 8s1.343 3 3 3z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M19.428 15.341A8 8 0 104.572 15.34L12 21l7.428-5.659z" />
    </svg>
  </div>
  <h3 class="font-semibold text-lg text-gray-900 mb-2">Visit Us</h3>
  <p class="text-gray-700 text-sm text-center">
    {siteInfo.address}
  </p>
</a>


  
    <!-- Google Map -->
    <div class="mt-16 h-72 w-full rounded-2xl overflow-hidden shadow-md">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3456.4879045025514!2d76.8706435!3d29.9654052!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390e47f5c2a38165%3A0x29e3803b11dd7a00!2sTechNova24!5e0!3m2!1sen!2sin!4v1760612072845!5m2!1sen!2sin" 
      width="100%"
        height="100%" style="border:0;" allowfullscreen="" 
      loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>

  <!-- Floating WhatsApp Button -->
  <a href={`https://wa.me/${siteInfo.whatsapp}?text=Hi%20I%20would%20like%20to%20know%20more%20about%20your%20services`}
     target="_blank"
     class="fixed bottom-6 right-6 bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg transition-all duration-300 hover:scale-110 z-50">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
      <path
        d="M20.52 3.48A11.86 11.86 0 0012 0C5.37 0 0 5.37 0 12a11.93 11.93 0 001.59 6l-1.06 3.88 3.98-1.04A11.9 11.9 0 0012 24c6.63 0 12-5.37 12-12a11.86 11.86 0 00-3.48-8.52zM12 22a9.9 9.9 0 01-5.09-1.41l-.36-.22-2.97.78.8-2.9-.23-.38A9.92 9.92 0 012 12a10 10 0 0110-10c5.52 0 10 4.48 10 10a9.92 9.92 0 01-1.87 5.87 9.93 9.93 0 01-8.13 4.13zm5.2-7.42c-.28-.14-1.65-.82-1.91-.91s-.44-.14-.63.14c-.19.28-.72.91-.89 1.1-.17.19-.33.21-.61.07-.28-.14-1.17-.43-2.23-1.37-.83-.74-1.39-1.65-1.55-1.93-.16-.28-.02-.43.12-.57.12-.12.28-.33.42-.5.14-.17.19-.28.28-.47.09-.19.05-.35-.02-.49-.07-.14-.63-1.52-.87-2.08-.23-.55-.47-.48-.63-.49h-.54c-.19 0-.49.07-.75.35-.26.28-.99.97-.99 2.37s1.02 2.75 1.16 2.94c.14.19 2 3.04 4.85 4.26.68.29 1.21.47 1.63.6.68.22 1.3.19 1.79.12.55-.08 1.65-.67 1.88-1.32.23-.65.23-1.21.16-1.32-.07-.12-.26-.19-.54-.33z"
      />
    </svg>
  </a>
</section>
