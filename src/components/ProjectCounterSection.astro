---
const stats = [
  { label: "Projects Completed", value: 460 },
  { label: "Years of Experience", value: 7 },
  { label: "Happy Clients", value: 250 },
];
---

<section class="py-20 bg-white text-center">
  <h2 class="text-3xl font-bold mb-12 text-gray-800">Our Achievements</h2>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-10 max-w-5xl mx-auto">
    {stats.map(({ label, value }) => (
      <div class="rounded-2xl border border-gray-200 shadow-sm p-10 transition hover:shadow-md">
        <h3 class="text-5xl font-extrabold text-green-600 counter" data-target={value}>0</h3>
        <p class="text-gray-500 mt-3 text-lg">{label}</p>
      </div>
    ))}
  </div>
</section>

<script>
  const counters = document.querySelectorAll(".counter");

  const animateCounter = (counter) => {
    const target = +counter.getAttribute("data-target");
    let count = 0;
    const step = target / 100;

    const update = () => {
      count += step;
      if (count < target) {
        counter.textContent = Math.ceil(count);
        requestAnimationFrame(update);
      } else {
        counter.textContent = target + "+";
      }
    };
    update();
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        animateCounter(entry.target);
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.5 });

  counters.forEach((counter) => observer.observe(counter));
</script>