<nav class="fixed w-full top-0 z-50 bg-white shadow-sm">
  <div class="max-w-5xl mx-auto flex items-center justify-between px-6 py-3">
    <!-- Logo -->
    <a href="/" class="text-2xl font-semibold text-gray-800 sansation-regular">
      technove24
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden md:flex space-x-8 text-gray-700 font-medium">
      <li><a href="#about" class="hover:text-blue-600 transition">About</a></li>
      <li><a href="#services" class="hover:text-blue-600 transition">Services</a></li>
      <li><a href="#portfolio" class="hover:text-blue-600 transition">Portfolio</a></li>
      <li><a href="#pricing" class="hover:text-blue-600 transition">Pricing</a></li>
      <li><a href="#faq" class="hover:text-blue-600 transition">FAQ</a></li>
      <li><a href="#contact" class="hover:text-blue-600 transition">Contact</a></li>
    </ul>

    <!-- Mobile Hamburger -->
    <button id="mobile-menu-btn" class="md:hidden p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
      <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 z-40 bg-black bg-opacity-30 hidden">
    <div class="bg-white w-64 h-full p-6 shadow-lg transform -translate-x-full transition-transform duration-300 flex flex-col">
      <!-- Mobile Logo -->
      <a href="/" class="text-2xl font-semibold text-gray-800 mb-6 sansation-regular">
        technove24
      </a>

      <ul class="flex flex-col space-y-4 flex-1">
        <li><a href="#about" class="hover:text-blue-600 transition">About</a></li>
        <li><a href="#services" class="hover:text-blue-600 transition">Services</a></li>
        <li><a href="#portfolio" class="hover:text-blue-600 transition">Portfolio</a></li>
        <li><a href="#pricing" class="hover:text-blue-600 transition">Pricing</a></li>
        <li><a href="#faq" class="hover:text-blue-600 transition">FAQ</a></li>
        <li><a href="#contact" class="hover:text-blue-600 transition">Contact</a></li>
      </ul>
    </div>
  </div>

  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const overlay = document.getElementById('mobile-menu');
    const menuPanel = overlay.querySelector('div');

    // Toggle menu
    btn.addEventListener('click', () => {
      overlay.classList.toggle('hidden');
      setTimeout(() => {
        menuPanel.classList.toggle('-translate-x-full');
      }, 10);
    });

    // Close menu when clicking a link
    overlay.querySelectorAll('a[href^="#"]').forEach(link => {
      link.addEventListener('click', () => {
        menuPanel.classList.add('-translate-x-full');
        setTimeout(() => overlay.classList.add('hidden'), 300);
      });
    });

    // Close when clicking outside panel
    overlay.addEventListener('click', e => {
      if (e.target === overlay) {
        menuPanel.classList.add('-translate-x-full');
        setTimeout(() => overlay.classList.add('hidden'), 300);
      }
    });
  </script>
</nav>
